<%= form_with model: [@article, @article.commends.build] do
|form| %>
    <p>
        <%= form.label :comment %><br>
        <%= form.text_field :commenter%>
    </p>
    <p>
        <%= form.label :body%><br>
        <%= form.text_area :body %>
    </p>
    <p>
        <%= form.submit %>
    </p>
<% end %>
